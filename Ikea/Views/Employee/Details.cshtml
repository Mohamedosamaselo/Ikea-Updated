@model EmployeeDetailsDto
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<h1>Employee Details</h1>

<br />
<br />

<div class="row justify-content-start m-4">
    <div class="col-4">
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="~/Files/Images/@Model.Image" class="img-fluid rounded-circle" alt="Employee Image" />
        }
        else
        {
            <img src="~/Files/Images/placeholder.png" class="img-fluid rounded-circle" alt="Employee Image" />
        }
    </div>
</div>
@* Bootstrap Tab *@
<ul class="nav nav-tabs" id="employeeTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">
            General
        </a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">
            Administration
        </a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">

    <!-- General Tab Content -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="row">

            <div class="form-Group mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" disabled/>
            </div>
            <div class="form-Group mb-3">
                <label class="form-label " asp-for="Email"></label>
                <input asp-for="Email" class="form-control" disabled/>
            </div>
            <div class="form-Group mb-3">
                <label class="form-label " asp-for="Department"></label>
                <input asp-for="Department" class="form-control" disabled />
            </div>
            <div class="form-Group mb-3">
                <label class="form-label " asp-for="Age"></label>
                <input asp-for="Age" class="form-control" disabled/>
            </div>
            <div class="form-Group mb-3">
                <label class="form-label " asp-for="Address"></label>
                <input asp-for="Address" class="form-control" disabled/>
            </div>
            <div class="form-Group mb-3">
                <label class="form-label " asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control" disabled/>
            </div>
            <div class="form-Group mb-3">
                <label class="form-label " asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" disabled/>
            </div>
            <div class="form-Group mb-3">
                <label class="form-label " asp-for="HiringDate"></label>
                <input asp-for="HiringDate" class="form-control" disabled/>
            </div>
            <div class="form-check mb-3">
                <label asp-for="IsActive" class="form-check-label" for="flexCheckChecked">
                    IsActive
                </label>
                <input asp-for="IsActive" class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked disabled>
            </div>
            <div class="Form-Group mb-3 ">
                <label class="control-label mb-2" asp-for="Gender"></label><br />
                @foreach (var Gender in Enum.GetValues(typeof(Gender)))
                {
                    <label class="radio-inline" >
                        <input type="radio" asp-for="Gender" value="@Gender"  disabled />
                        @Gender
                    </label>
                }
            </div>
            <div class="form-Group mb-3 ">
                <label asp-for="EmployeeType"  class="control-label mb-3" ></label>
                <select asp-for="EmployeeType" disabled asp-items="Html.GetEnumSelectList<EmployeeType>()" class="form-control">
                    <option value="">Choose .......  </option>
                </select>
            </div>

        </div>
    </div>

    <!-- Administration Tab Content -->
    <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration-tab">
        <div class="row">
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="CreatedBy"></label>
                <input asp-for="CreatedBy" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Createdon"></label>
                <input asp-for="Createdon" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="LastModifiedBy"></label>
                <input asp-for="LastModifiedBy" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="LastModifiedOn"></label>
                <input asp-for="LastModifiedOn" class="form-control" readonly />
            </div>
        </div>
    </div>


    <form asp-action="Delete" method="post" asp-route-id="@Model.Id" class="mt-3">
        <input type="submit" value="Delete " class="btn btn-danger">
        <a asp-action="Index" class="btn btn-info">Back to list </a>
    </form>

</div>


