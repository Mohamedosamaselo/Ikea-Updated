@model DepartmentEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="col-8 my-3">Edit Department </h1>

<form asp-action="Edit" class=" form-control p-3">

    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group mb-3">
        <label class="form-label " asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-Group mb-3">
        <label class="form-label " asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-Group mb-3">
        <label class="form-label " asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-Group mb-3">
        <label class="form-label " asp-for="CreationDate"></label>
        <input type="date" asp-for="CreationDate" class="form-control" />
    </div>


    <div class="mt-3 ms-auto">
        <input type="submit" value="Save" class="btn btn-success" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section ValidationScripts {
    <partial name="_ValidationScriptsPartial" />
